FROM circleci/openjdk:11.0.11-9-jdk-buster-node-browsers-legacy

# Install GraalVM
RUN curl --silent --show-error --location --fail --retry 3 --output /tmp/graalvm-ce-java11-linux-amd64-22.3.0.tar.gz https://github.com/graalvm/graalvm-ce-builds/releases/download/vm-22.3.0/graalvm-ce-java11-linux-amd64-22.3.0.tar.gz && tar -xzf /tmp/graalvm-ce-java11-linux-amd64-22.3.0.tar.gz -C /opt/ && rm /tmp/graalvm-ce-java11-linux-amd64-22.3.0.tar.gz && /opt/graalvm-ce-java11-22.3.0/bin/java -version

ENV JAVA_HOME=/opt/graalvm-ce-java11-22.3.0

# Update PATH for Java tools
ENV PATH="/opt/sbt/bin:/opt/apache-maven/bin:/opt/apache-ant/bin:/opt/gradle/bin/:/opt/graalvm-ce-java11-22.3.0/bin:$PATH"

USER circleci
ENV PATH /home/circleci/.local/bin:/home/circleci/bin:${PATH}

CMD ["/bin/sh"]